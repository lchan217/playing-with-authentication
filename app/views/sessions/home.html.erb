<div class="home-wrapper">
  <h1>Sign in </h1>

  <%= form_for :user, url: '/login', method: :post do |f| %>
    <%= f.label :username%>
    <%= f.text_field :username %><br>

    <%= f.label :password%>
    <%= f.password_field :password %><br>

    <%= f.submit "Login" ,class: 'btn btn-primary'%>
  <% end %>
  <br>

    <%= link_to "Sign In With #{fa_icon "github"}".html_safe, '/auth/github',:class => "btn btn-light" %>
    <%= link_to "Sign In With #{fa_icon "google"}".html_safe, '/auth/google_oauth2', :class => "btn btn-light"%>
    <%= link_to "Sign In With #{fa_icon "twitter"}".html_safe, '/auth/twitter', :class => "btn btn-light" %>
    <%= link_to "Sign In With #{fa_icon "user-plus"}".html_safe, '/signup', :class => "btn btn-light" %> 


  <h1> errors? </h1>
  <% if flash[:notice] %>
    <%= flash[:notice] %>
  <% end %>
</div>